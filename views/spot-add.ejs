              <div class="container mt-2">
                <label for="id-diemdat" style="margin-bottom: 6px">Điểm đặt</label>
                <input type="text" class="form-control" id="id-diemdat" value="ĐỒNG KHỞI - NGUYỄN DU, SỞ VĂN HÓA VÀ THỂ THAO" oninput="updateTitle(this)"  />
              </div>
              <div class="container mt-2 d-flex justify-content-between">
                <div style="width: calc((100% - 2rem) / 2);">
