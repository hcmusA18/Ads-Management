<!DOCTYPE html>
<html lang="vi">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title><%- title %></title>
  <%- include('../../partials/head.ejs') %>
  <!-- <style>
    table th .th-inner {
      height: 100%;
      text-wrap: wrap!important;
      display: flex;
      justify-content: center;
      align-items: center;
    }
  </style> -->
</head>

<body>
    <header></header>
    <main class="container-fluid d-flex bg-light">
      <div class="row"><%- include('../../partials/sidebar.ejs', { toolbars: toolbars }) %></div>
      <div class="container-fluid vw-100 pt-1">
        <div class="container border border-dark rounded py-4 px-5 my-5 mx-auto shadow position-relative">
          <!-- Profile -->
          <%- include("../../partials/profile_card.ejs", 
              {user: 
                {
                  name: 'John Doe' , 
                  level: 'Quận 2' 
                }
              }
            ); 
          %>

            <!-- Title -->
            <div class="d-block mb-3">
              <h1 class="fw-bolder">DANH SÁCH BẢNG QUẢNG CÁO</h1>
            </div>

            <!-- Select -->
            <div class="container-fluid mt-3 ps-0">
              <div class="d-flex flex-row align-items-center gap-2" style="position: relative">
                <div class="d-flex flex-row align-items-center gap-2" style="position: relative">
                  <%- include("../../partials/select.ejs", 
                      {
                        current: 'Bảng quảng cáo' , 
                        options: [ 
                          {
                            name: 'Điểm đặt quảng cáo' , 
                            link: '/phuong/diemdat' 
                          }, 
                          { 
                            name: 'Bảng quảng cáo' , 
                            link: '/phuong/bangquangcao' 
                          },
                        ]
                      }
                    );
                  %>
                </div>
              </div>
              <!-- Table -->
              <table data-toggle="table" data-pagination="true" data-search="true" data-pagination="true"
                data-page-list="[10, 25, 50, 100, all]" data-locale="vi-VN"
                data-show-button-text="true" data-icon-prefix="bi"
                class="table table-bordered table-hover table-striped table-responsive-md rounded" smart-display>
                <thead>
                  <tr class="row m-0">
                    <th class="col-1" data-sortable="true" data-align="center" data-field="id1">ID</th>
                    <th class="col" data-sortable="true" data-field="diemdat">Điểm đặt</th>
                    <th class="col-2" data-sortable="true" data-field="loai">Loại bảng quảng cáo</th>
                    <th class="col-2" data-sortable="true" data-field="htqc">Kích thước</th>
                    <th class="col-2" data-sortable="true" data-field="thongtin">Số lượng</th>
                    <th class="col-1" data-align="center" data-field="detail">Chi tiết</th>
                  </tr>
                </thead>
                <tbody>
                  <% for (let i=1; i <=55; i++) { %>
                    <tr class="row m-0">
                      <td>B0155001</td>
                      <td>Đồng Khởi - Nguyễn Du (Sở Văn Hóa)</td>
                      <td>Trụ bảng Hiflex</td>
                      <td>2.5m x 10m</td>
                      <td>1 trụ/bảng</td>
                      <td>
                        <div class="d-flex flex-row align-items-center justify-content-center">
                            <a href="/phuong/bangquangcao/123">
                                <img src="/images/info.svg" alt="edit-icon" style="background-color: transparent" />
                            </a>
                        </div>
                      </td>
                    </tr>
                    <% } %>
                </tbody>
              </table>

              <!-- Modal add -->
              <div class="modal fade" id="addModal-htbc" tabindex="-1" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered">
                  <div class="modal-content">
                    <div class="modal-header pb-3" style="border: none">
                      <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>

                    <div class="card align-top h-auto rounded border-dark p-1 ms-1"
                      style="min-width: fit-content; background-color: #f7fafc">
                      <p class="lh-base text-start m-0">Mới nhất</p>
                      <p class="fw-bolder text-end fs-5 lh-base my-0 ms-5" style="color: #00b285">Hình thức A</p>
                    </div>

                    <div class="card align-top h-auto rounded border-dark p-1 ms-1"
                      style="min-width: fit-content; background-color: #f7fafc">
                      <p class="lh-base text-start m-0">Yêu cầu mới nhất</p>
                      <p class="fw-bolder text-end fs-5 lh-base my-0 ms-5" style="color: #d59633">Hình thức B</p>
                    </div>
                  </div>
                </div>
              </div>
            </div>
    </main>
</body>

</html>