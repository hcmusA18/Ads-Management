<!DOCTYPE html>
<html lang="vi">

<head>
    <meta charset="UTF-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title><%- title %></title>
    <%- include('./partials/head.ejs') %>
</head>

<body>
<header></header>
<main class="container-fluid d-flex bg-light">
    <div class="row"><%- include('./partials/sidebar.ejs', { toolbars: toolbars }) %></div>
    <div class="container-fluid vw-100 pt-1">
        <div class="container border border-dark rounded py-4 px-5 my-5 mx-auto shadow position-relative inner-container">
            <!-- Profile -->
            <%- include("./partials/profile_card.ejs"); %>

            <!-- Title -->
            <div class="d-block mb-3">
                <h1 class="fw-bolder text-uppercase"><%= title%></h1>
            </div>
            <!-- Check box -->
            <% if (url.includes('so') || url.includes('quan')) { %>
            <div class="container-fluid checkbox-container">
                <div class="d-inline-block pb-2" style="padding-left: 15px">
                    <h1 style="color: #1f274a; font-size: 22px; font-weight: 500"><%= checkboxHeader%>
                </div>
                <div class="container-fluid d-flex flex-wrap">
                    <% checkboxData.forEach((item, i) => {%>
                        <div class="form-check me-4 mb-3" style="min-width: 11rem;">
                            <input
                                    type="checkbox"
                                    class="form-check-input"
                                    id="check<%= i %>"
                                    name="option<%= i %>"
                                    value="<%= item %>"
                                    checked/>
                            <label class="form-check-label" for="check<%= i %>"><%=item%></label>
                        </div>
                    <%})%>

                </div>
            </div>
            <% } %>
            <!-- Select -->
            <!-- <% const [baseUrl, queryParams] = url.split('?'); %>
            <div class="container-fluid mt-3 ps-0">
                <div class="d-flex flex-row align-items-center gap-2 position-relative">
                    <%- include("./partials/select.ejs",
                    {current: 0 ,
                    options: [
                    { name: 'Điểm đặt quảng cáo' , link: baseUrl + '?category=spot'},
                    { name: 'Bảng quảng cáo' , link: baseUrl + '?category=board'}]
                    }); %>
                </div>
            </div> -->
            <!-- Table -->
            <% const [basePath, category] = url.split('?'); %>
            <%- include('./partials/table.ejs', {linkDetails: {basePath: basePath, category: category.split('=')[1]}}) %>
        </div>
    </div>
</main>

<script defer src="/js/checkbox.js"></script>

</body>

</html>