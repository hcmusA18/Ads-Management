<!DOCTYPE html>
<html lang="vi">

<head>
    <meta charset="UTF-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title><%- title %></title>
    <%- include("../partials/head.ejs"); %>
</head>

<body>
<main class="container-fluid d-flex bg-light">
    <div class="row"><%- include("../partials/sidebar.ejs", {toolbars: toolbars}); %></div>
    <div class="container-fluid vw-100 pt-1">
        <div class="container border border-dark rounded py-4 px-5 my-5 mx-auto shadow position-relative">
            <!-- Profile -->
            <%- include("../partials/profile_card.ejs", {user: {name: 'Admin', level: 'Sở VH-TT'}}); %>
            <!-- Title -->
            <div class="d-block">
                <h1 class="fw-bolder text-uppercase"><%= title %> </h1>
            </div>
            <!-- Select -->
            <div class="container-fluid mt-3 ps-0">
                <div class="d-flex flex-row align-items-center gap-2 position-relative">
                    <%- include("../partials/select.ejs",
                    {current: 0,
                    options: [
                    { name: 'Yêu cầu cấp phép' , link: '/so/requests?category=license' },
                    { name: 'Yêu cầu chỉnh sửa' , link: '/so/requests?category=modify' }, ]}); %>
                    <%- include("../partials/info_card.ejs", {title: 'Đã duyệt' , value: '112,983 đơn' , color: '#00b285' }); %>
                    <%- include("../partials/info_card.ejs", {title: 'Chờ duyệt' , value: '112,983 đơn' , color: '#d59633'}); %>
                    <%- include("../partials/info_card.ejs", {title: 'Từ chối' , value: '112,983 đơn' , color: '#e84747' }); %>
                </div>
            </div>
            <!-- Table -->
            <table data-toggle="table" data-search="true" data-pagination="true"
                   data-page-list="[10, 25, 50, 100, all]" data-locale="vi-VN" data-buttons-class="primary"
                   data-show-button-text="true" data-icon-prefix="bi"
                   class="table table-bordered table-hover table-striped table-responsive-md rounded" smart-display>
                <thead>
                <tr>
                    <th data-sortable="true" data-align="center" data-field="id1"><%= table_header[0]%></th>
                    <th data-sortable="true" data-align="center" data-field="id2"><%= table_header[1]%></th>
                    <th data-sortable="true" data-field="type"><%= table_header[2]%></th>
                    <th data-sortable="true" data-align="center" data-field="name"><%= table_header[3]%></th>
                    <th data-sortable="true" data-align="center" data-field="email"><%= table_header[4]%></th>
                    <th data-sortable="true" data-align="center" data-field="date"><%= table_header[5]%></th>
                    <th data-sortable="true" data-align="center" data-field="status"><%= table_header[6]%></th>
                    <th data-sortable="true" data-align="center" data-field="action">Hành động</th>
                </tr>
                </thead>
                <tbody>
                <% table_data.forEach((item)=> { %>
                    <tr>
                        <td><%= item.id%></td>
                        <td><%= item.point_id%></td>
                        <td><%= item.ward%></td>
                        <td><%= item.district%>
                        <td><%= item.officer%></td>
                        <td><%= item.time ? item.time : item.content%>
                        <td><%= item.status%></td>
                        <td>
                            <div class="d-flex flex-row align-items-center justify-content-center">
                                <a href='<%= "/so/request/" + item.id %>' class="mx-3">
                                    <img src="/images/info.svg" alt="edit-icon" style="background-color: transparent"/>
                                </a>
                                <a href="#" class="mx-3">
                                    <img src="/images/remove.svg" alt="edit-icon"
                                         style="background-color: transparent"/>
                                </a>
                            </div>
                        </td>
                    </tr>
                <% }) %>
                </tbody>
            </table>
        </div>
    </div>
</main>
</body>

</html>
