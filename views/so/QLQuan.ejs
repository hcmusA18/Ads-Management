<!DOCTYPE html>
<html lang="vi">

<head>
    <meta charset="UTF-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title><%- title %></title>
    <%- include("../partials/head.ejs"); %>
</head>

<body>
<% const toolbars = [
    {icon: 'bi bi-house-door-fill', name: 'Trang chủ', link: '/so',},
    {icon: 'bi bi-building-fill', name: 'Danh sách quận huyện', link: '/so/qlquan' || '/so/htbc'},
    {icon: 'bi bi-badge-ad-fill', name: 'Loại hình quảng cáo', link: '/so/lhqc',},
    {icon: 'bi bi-chat-left-dots-fill', name: 'Yêu cầu', link: '/so/yeucau',},
    {icon: 'bi bi-journal-bookmark-fill', name: 'Thống kê báo cáo', link: '/so/baocao',},
    {icon: 'bi bi-person-badge', name: 'Phân công', link: '/so/phancong',},] %>
<header></header>
<main class="container-fluid d-flex bg-light">
    <div class="row"><%- include("../partials/sidebar.ejs", {toolbars: toolbars}); %></div>
    <div class="container-fluid vw-100 pt-1">
        <div class="container border border-dark rounded py-4 px-5 my-5 mx-auto shadow position-relative">
            <!-- Profile -->
            <%- include("../partials/profile_card.ejs", {user: {name: 'Admin' , level: 'Sở VH-TT' }}); %>
            <!-- Title -->
            <div class="d-block">
                <h1 class="fw-bolder">DANH SÁCH CÁC QUẬN</h1>
            </div>
            <!-- Select -->
            <div class="container-fluid mt-3 ps-0">
                <div class="d-flex flex-row align-items-center gap-2 position: relative">
                    <div class="d-flex flex-row align-items-center gap-2 position-relative">
                        <%- include("../partials/info_card.ejs", {title: 'Tổng số quận', value: '12', color: '#00b285' }); %>
                        <%- include("../partials/info_card.ejs", {title: 'Tổng số phường', value: '112', color: '#e84747' }); %>
                        <%- include("../partials/info_card.ejs", {title: 'Tổng số điểm quảng cáo', value: '211', color: '#d59633' }); %>
                        <%- include("../partials/info_card.ejs", {title: 'Tổng số bảng quảng cáo', value: '1022', color: '#ae57ff' }); %>
                    </div>
                </div>
            </div>
            <!-- Content -->
            <div class="container-listbar d-flex flex-row" style="gap: 1rem">
                <!-- Left Bar -->
                <div class="d-inline-block list-bar">
                    <div class="title py-2">QUẬN / HUYỆN</div>
                    <!-- Search Bar -->
                    <div class="searchBar">
                        <div class="search">
                            <input type="text" name="searchInfo" class="searchFill" placeholder="Search a District"
                                   style="background: transparent;"/>
                            <i class="fa-solid fa-magnifying-glass"></i>
                        </div>
                    </div>
                    <!-- List District -->
                    <div class="list-district scroll">
                        <a href="/so/qlphuong?quan=Q001" style="text-decoration: none">
                            <div class="district-box d-flex">
                                <span style="margin: 0 auto; background-color: rgba(255, 255, 255, 0)">Quận 1</span>
                                <i class="fa-solid fa-chevron-right fa-2xs"></i>
                            </div>
                        </a>
                        <!-- Raw Data -> will be changed when apply DB -->
                        <a href="/so/qlphuong?quan=Q002" style="text-decoration: none">
                            <div class="district-box d-flex">
                                <span style="margin: 0 auto; background-color: rgba(255, 255, 255, 0)">Quận 2</span>
                                <i class="fa-solid fa-chevron-right fa-2xs"></i>
                            </div>
                        </a>
                        <a href="/so/qlphuong?quan=Q003" style="text-decoration: none">
                            <div class="district-box d-flex">
                                <span style="margin: 0 auto; background-color: rgba(255, 255, 255, 0)">Quận 3</span>
                                <i class="fa-solid fa-chevron-right fa-2xs"></i>
                            </div>
                        </a>
                        <a href="/so/qlphuong?quan=Q004" style="text-decoration: none">
                            <div class="district-box d-flex">
                                <span style="margin: 0 auto; background-color: rgba(255, 255, 255, 0)">Quận 4</span>
                                <i class="fa-solid fa-chevron-right fa-2xs"></i>
                            </div>
                        </a>
                        <a href="/so/qlphuong?quan=Q005" style="text-decoration: none">
                            <div class="district-box d-flex">
                                <span style="margin: 0 auto; background-color: rgba(255, 255, 255, 0)">Quận 5</span>
                                <i class="fa-solid fa-chevron-right fa-2xs"></i>
                            </div>
                        </a>
                        <a href="/so/qlphuong?quan=Q006" style="text-decoration: none">
                            <div class="district-box d-flex">
                                <span style="margin: 0 auto; background-color: rgba(255, 255, 255, 0)">Quận 6</span>
                                <i class="fa-solid fa-chevron-right fa-2xs"></i>
                            </div>
                        </a>
                        <a href="/so/qlphuong?quan=Q007" style="text-decoration: none">
                            <div class="district-box d-flex">
                                <span style="margin: 0 auto; background-color: rgba(255, 255, 255, 0)">Quận 7</span>
                                <i class="fa-solid fa-chevron-right fa-2xs"></i>
                            </div>
                        </a>
                        <a href="/so/qlphuong?quan=Q008" style="text-decoration: none">
                            <div class="district-box d-flex">
                                <span style="margin: 0 auto; background-color: rgba(255, 255, 255, 0)">Quận 8</span>
                                <i class="fa-solid fa-chevron-right fa-2xs"></i>
                            </div>
                        </a>
                        <a href="/so/qlphuong?quan=Q0BT" style="text-decoration: none">
                            <div class="district-box d-flex">
                                <span style="margin: 0 auto; background-color: rgba(255, 255, 255, 0)">Quận Bình Tân</span>
                                <i class="fa-solid fa-chevron-right fa-2xs"></i>
                            </div>
                        </a>
                        <a href="/so/qlphuong?quan=QBTH" style="text-decoration: none">
                            <div class="district-box d-flex">
                                <span style="margin: 0 auto; background-color: rgba(255, 255, 255, 0)">Quận Bình Thạnh</span>
                                <i class="fa-solid fa-chevron-right fa-2xs"></i>
                            </div>
                        </a>
                        <a href="/so/qlphuong?quan=Q0TB" style="text-decoration: none">
                            <div class="district-box d-flex">
                                <span style="margin: 0 auto; background-color: rgba(255, 255, 255, 0)">Quận Tân Bình</span>
                                <i class="fa-solid fa-chevron-right fa-2xs"></i>
                            </div>
                        </a>
                        <a href="/so/qlphuong?quan=Q0TP" style="text-decoration: none">
                            <div class="district-box d-flex">
                                <span style="margin: 0 auto; background-color: rgba(255, 255, 255, 0)">Quận Tân Phú</span>
                                <i class="fa-solid fa-chevron-right fa-2xs"></i>
                            </div>
                        </a>
                        <a href="/so/qlphuong?quan=Q012" style="text-decoration: none">
                            <div class="district-box d-flex">
                                <span style="margin: 0 auto; background-color: rgba(255, 255, 255, 0)">Quận 12</span>
                                <i class="fa-solid fa-chevron-right fa-2xs"></i>
                            </div>
                        </a>
                        <a href="/so/qlphuong?quan=Q0GV" style="text-decoration: none">
                            <div class="district-box d-flex">
                                <span style="margin: 0 auto; background-color: rgba(255, 255, 255, 0)">Quận Gò Vấp</span>
                                <i class="fa-solid fa-chevron-right fa-2xs"></i>
                            </div>
                        </a>
                        <a href="/so/qlphuong?quan=Q0BC" style="text-decoration: none">
                            <div class="district-box d-flex">
                                <span style="margin: 0 auto; background-color: rgba(255, 255, 255, 0)">Quận Bình Chánh</span>
                                <i class="fa-solid fa-chevron-right fa-2xs"></i>
                            </div>
                        </a>
                        <a href="/so/qlphuong?quan=Q0CC" style="text-decoration: none">
                            <div class="district-box d-flex">
                                <span style="margin: 0 auto; background-color: rgba(255, 255, 255, 0)">Quận Củ Chi</span>
                                <i class="fa-solid fa-chevron-right fa-2xs"></i>
                            </div>
                        </a>

                        <!-- Raw Data -> will be changed when apply DB -->
                    </div>
                    <a href="/so/qlquan" style="font-size: 14px">Xem chi tiết danh sách QUẬN</a>
                </div>
                <!-- Table -->
                <div class="container-fluid d-inline-block ps-0" style="width: 80%;  padding: 0;  margin: 0;">
                    <table data-toggle="table" data-search="true" data-pagination="true"
                           data-page-list="[10, 25, 50, 100, all]" data-locale="vi-VN" data-buttons-class="primary"
                           data-buttons="buttons" data-show-button-text="true" data-icon-prefix="bi"
                           class="table table-bordered table-hover table-striped table-responsive-md rounded"
                           smart-display>
                        <thead>
                        <tr class="row m-0">
                            <th class="col" data-sortable="true" data-align="center" data-field="id">Mã Quận</th>
                            <th class="col" data-sortable="true" data-align="center" data-field="name">Tên Quận</th>
                            <th class="col" data-sortable="true" data-align="center" data-field="num1">Số Phường</th>
                            <th class="col" data-sortable="true" data-align="center" data-field="num2">Số điểm đặt</th>
                            <th class="col" data-sortable="true" data-align="center" data-field="num3">Số bảng quảng
                                cáo
                            </th>
                        </tr>
                        </thead>
                        <tbody>
                        <tr class="editRow row m-0">
                            <td>
                                <a data-bs-toggle="modal" data-bs-target="#editModal-qlquan"
                                   style="background-color: #00000000;  display: block;">
                                    Q001
                                </a>
                            </td>
                            <td>
                                <a data-bs-toggle="modal" data-bs-target="#editModal-qlquan"
                                   style="background-color: #00000000;  display: block;">
                                    Quận 1
                                </a>
                            </td>
                            <td>
                                <a data-bs-toggle="modal" data-bs-target="#editModal-qlquan"
                                   style="background-color: #00000000;  display: block;">
                                    10
                                </a>
                            </td>
                            <td>
                                <a data-bs-toggle="modal" data-bs-target="#editModal-qlquan"
                                   style="background-color: #00000000;  display: block;">
                                    15
                                </a>
                            </td>
                            <td>
                                <a data-bs-toggle="modal" data-bs-target="#editModal-qlquan"
                                   style="background-color: #00000000;  display: block;">
                                    20
                                </a>
                            </td>
                        </tr>
                        <% for (var i = 2; i < 13; i++) { %>
                            <tr class="editRow row m-0">
                                <td>Q00<%= i; %></td>
                                <td>Quận <%= i; %></td>
                                <td>10</td>
                                <td>15</td>
                                <td>20</td>
                            </tr>
                        <% } %>
                        <tr class="editRow row m-0">
                            <td>Q0BT</td>
                            <td>Quận Bình Tân</td>
                            <td>10</td>
                            <td>15</td>
                            <td>20</td>
                        </tr>
                        <tr class="editRow row m-0">
                            <td>QBTH</td>
                            <td>Quận Bình Thạnh</td>
                            <td>10</td>
                            <td>15</td>
                            <td>20</td>
                        </tr>
                        <tr class="editRow row m-0">
                            <td>Q0TP</td>
                            <td>Quận Tân Phú</td>
                            <td>10</td>
                            <td>15</td>
                            <td>20</td>
                        </tr>
                        </tbody>
                    </table>
                </div>
            </div>
            <!-- Modal -->
            <%- include('../partials/modal.ejs', {modal_id: 'editModal-qlquan', title: 'CHỈNH SỬA QUẬN', components: [
            {id: 'maquan', label: 'Mã Quận', type: 'text', required: true, disabled: true, value: 'Q001'},
            {id: 'tenquan', label: 'Tên Quận', type: 'text', required: true},
            ], buttons: [
            {label: 'Hủy', color: '#e84747', dismiss: true},
            {label: 'Xác nhận', color: '#3c77ff', dismiss: false},
            ]}); %>
            <%- include('../partials/modal.ejs', {modal_id: 'addModal-qlquan', title: 'THÊM QUẬN MỚI', components: [
            {id: 'tenquan', label: 'Tên Quận', type: 'text', required: true},
            ], buttons: [
            {label: 'Thêm', color: '#3c77ff', dismiss: true},
            ]}); %>
        </div>
    </div>
</main>
</body>

</html>
