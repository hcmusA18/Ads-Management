              <div class="d-flex flex-row align-items-center gap-2" style="position: relative">

                <div class="card align-top h-auto rounded border-dark p-1 ms-1"
                  style="min-width: fit-content; background-color: #f7fafc">
                  <p class="lh-base text-start m-0">Tổng số Phường</p>
                  <p class="fw-bolder text-end fs-5 lh-base my-0 ms-5" style="color: #ae57ff">112</p>
                </div>

                <div class="card align-top h-auto rounded border-dark p-1 ms-1"
                  style="min-width: fit-content; background-color: #f7fafc">
                  <p class="lh-base text-start m-0">Tổng số điểm quảng cáo</p>
                  <p class="fw-bolder text-end fs-5 lh-base my-0 ms-5" style="color: #00B285">211</p>
                </div>

                <div class="card align-top h-auto rounded border-dark p-1 ms-1"
                  style="min-width: fit-content; background-color: #f7fafc">
                  <p class="lh-base text-start m-0">Tổng số bảng quảng cáo</p>
                  <p class="fw-bolder text-end fs-5 lh-base my-0 ms-5" style="color: #D59633">1022</p>
                </div>
              </div>
            </div>
            <!-- Content -->
            <div class="container-listbar d-flex flex-row" style="gap: 15px">
              <!-- Left Bar -->
              <div class="d-inline-block list-bar">
                <div class="title py-2">QUẬN / HUYỆN</div>
                <!-- Search Bar -->
                <div class="searchBar">
                  <div class="search">
                    <input type="text" name="searchInfo" class="searchFill" placeholder="Search a District"
                      style="background: transparent;" />
                    <i class="fa-solid fa-magnifying-glass"></i>
                  </div>
                </div>
                <!-- List District -->
                <div class="list-district scroll">
                  <a href="/so/qlphuong?quan=Q001" style="text-decoration: none">
                    <div class="district-box d-flex">
                      <span style="margin: 0 auto; background-color: rgba(255, 255, 255, 0)">Quận 1</span>
                      <i class="fa-solid fa-chevron-right fa-2xs"></i>
                    </div>
                  </a>
                  <!-- Raw Data -> will be changed when apply DB -->
                  <a href="/so/qlphuong?quan=Q002" style="text-decoration: none">
                    <div class="district-box d-flex">
