<%- include("../partials/sidebar.ejs"); %>
<div class="container-fluid vw-100 ps-5 pt-1">
  <div class="top-bar position-relative">
    <!-- profile -->
    <div class="position-absolute top-0 end-0 p-3 pe-1">
      <div class="card d-flex flex-sm-row align-items-center p-2 shadow profile-card" style="border-radius: 8px">
        <i class="fa fa-user-circle fa-2x" aria-hidden="true"></i>
        <div class="ps-2 d-flex flex-sm-column">
          <p class="h6 mb-0">Admin</p>
          <p class="h6 mb-0" style="font-weight: 75">Sở VH - TT</p>
        </div>
      </div>
    </div>
  </div>
  <div class="main-container">
    <!-- Title -->
    <div class="d-block">
      <h1 class="header-1">THỐNG KÊ BÁO CÁO</h1>
    </div>
    <!-- Filter -->
    <div class="container-fluid mt-3 ps-0">
      <div class="d-flex flex-row align-items-center" style="position: relative">
        <div
          class="card d-inline-block align-top"
          style="
            height: fit-content;
            border-radius: 8px;
            border: 1px solid #677383;
            background-color: #f7fafc;
            width: 10rem;
            padding: 7px;
            margin-left: 10px;
            min-width: fit-content;
          ">
          <div style="font-size: 16px; line-height: 1">Điểm có báo cáo nhiều nhất</div>
          <div style="font-size: 20px; text-align: right; line-height: 1; color: #00b285; font-weight: 700">Địa điểm A</div>
        </div>

        <div
          class="card d-inline-block align-top"
          style="
            height: fit-content;
            border-radius: 8px;
            border: 1px solid #677383;
            background-color: #f7fafc;
            width: fit-content;
            padding: 7px;
            width: 10rem;
            margin-left: 10px;
            min-width: fit-content;
          ">
          <div style="font-size: 16px; line-height: 1">Bảng có báo cáo nhiều nhất</div>
          <div style="font-size: 20px; text-align: right; line-height: 1; color: #d59633; font-weight: 700">Bảng báo B</div>
        </div>
        
        <div
          class="card d-inline-block align-top"
          style="
            height: fit-content;
            border-radius: 8px;
            border: 1px solid #677383;
            background-color: #f7fafc;
            width: fit-content;
            padding: 7px;
            width: 10rem;
            margin-left: 10px;
            min-width: fit-content;
          ">
          <div style="font-size: 16px; line-height: 1">Quận có báo cáo nhiều nhất</div>
          <div style="font-size: 20px; text-align: right; line-height: 1; color: #E84747; font-weight: 700">Quận C</div>
        </div>
      </div>
    </div>
    <!-- Table -->
    <div class="container-fluid mt-4 ps-0">
      <table id="data-table" class="table table-hover table-responsive table-bordered" style="width: 100%">
        <thead id="table-header">
          <tr>
            <th>DI Báo cáo</th>
            <th>ID Điểm đặt/Bảng QC</th>
            <th>Loại hình</th>
            <th>Người gửi</th>
            <th>Email</th>
            <th>Thời điểm gửi</th>
            <th>Trạng thái</th>
            <th>Chi tiết</th>
          </tr>
        </thead>
        <tbody>
          <% let maLoai = "L00" %> <% for (let i = 1; i <= 55; i++) { %>
          <tr>
            <!-- 1 -->
            <td><%= i %></td>
            <!-- 2 -->
            <td><%= maLoai + String(i) %></td>
            <!-- 3 -->
            <td>Lorem ipsum dolor sit amet.</td>
            <!-- 4 -->
            <td>Lorem ipsum dolor sit amet consectetur adipisicing elit. Temporibus, earum!</td>
            <!-- 5 -->
            <td>
              nckhanh@gmail.com
            </td>
            <!-- 6 -->
            <td>
                30/10/2023
            </td>
            <!-- 7 -->
            <td>
                Chờ xử lý
            </td>
            <!-- 8 Chi tiết -->
            <td>
                <div
                class="d-flex flex-row align-items-center justify-content-center action-icons"
                style="background-color: transparent">
                
                <a href="/ctbc" data-bs-toggle="modal" data-bs-target="#editModal-details<%= i %>">
                  <img src="/images/info.svg" alt="edit-icon" style="background-color: transparent;">
                </a>

                <!-- Modal edit -->
                <div class="modal fade" id="editModal-details<%= i %>" tabindex="-1" aria-hidden="true">
                  <div class="modal-dialog modal-dialog-centered">
                    <div class="modal-content">
                      <div class="modal-header pb-3" style="border: none">
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                      </div>
                      <div class="modal-body pt-1 pb-2" style="border: none">
                        <h5 class="modal-title pb-2" style="font-size: 22px; font-weight: 700; text-align: center">
                          CHỈNH SỬA LOẠI HÌNH QUẢNG CÁO
                        </h5>
                        <form>
                          <div class="mb-3 d-flex" style="flex-wrap: wrap;">
                            <label for="maloai-lhqc" class="col-form-label mb-1">Mã loại:</label>
                            <input
                              type="text"
                              class="form-control"
                              id="maloai-lhqc"
                              disabled
                              value="<%= maLoai + String(i) %>" />
                          </div>
                          <div class="mb-3 d-flex" style="flex-wrap: wrap;">
                            <label for="loai-lhqc" class="col-form-label mb-1"
                              >Loại:<span class="text-danger">*</span></label
                            >
                            <!-- display ten loai hinh quang cao trong khung input -->
                            <input type="text" class="form-control" id="loai-lhqc" required />
                          </div>
                          <div class="mb-3 d-flex" style="flex-wrap: wrap;">
                            <label for="mota-lhqc" class="col-form-label mb-1"
                              >Mô tả:<span class="text-danger">*</span></label
                            >
                            <!-- display mo ta loai hinh quang cao trong khung input -->
                            <textarea class="form-control" id="mota-lhqc" required></textarea>
                          </div>
                        </form>
                      </div>
                      <div
                        class="modal-footer pt-1 d-flex justify-content-around"
                        style="border: none; background-color: #f7fafc">
                        <button
                          type="button"
                          class="btn"
                          data-bs-dismiss="modal"
                          style="min-width: 6.5rem; background-color: #e84747; color: #f7fafc">
                          Hủy
                        </button>
                        <button
                          type="button"
                          class="btn"
                          style="min-width: 6.5rem; background-color: #3c77ff; color: #f7fafc">
                          Xác nhận
                        </button>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </td>
          </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>
</div>
