<%- include("../partials/sidebar.ejs"); %>
<div class="container-fluid vw-100 ps-5 pt-1">
  <div class="top-bar position-relative">
    <!-- back button -->
    <div
      class="d-flex flex-wrap position-absolute top-0 start-0 pt-4 pe-1"
      style="max-width: fit-content; background-color: transparent;">
      <a
        href="/so/yeucau/cp"
        style="height: 50px; border-radius: 50px; background-color: #3c77ff;"
        class="d-flex align-items-center">
        <img src="/images/back.svg" alt="back" style="background-color: #3c77ff; border-radius: 50px" />
      </a>
    </div>
    <!-- profile -->
    <div class="position-relative d-flex flex-row position-absolute top-0 end-0 p-3 pe-1">
      <div class="card d-flex flex-sm-row align-items-center p-2 shadow profile-card" style="border-radius: 8px">
        <i class="fa fa-user-circle fa-2x" aria-hidden="true"></i>
        <div class="ps-2 d-flex flex-sm-column">
          <p class="h6 mb-0">Admin</p>
          <p class="h6 mb-0" style="font-weight: 75">Sở VH - TT</p>
        </div>
      </div>
    </div>
  </div>
  <div class="main-container">
    <!-- Title -->
    <div class="d-flex flex-row align-items-center" style="gap: 10px">
      <h1 class="header-1">CHI TIẾT YÊU CẦU</h1>
      <!-- State -->
      <div class="pt-3 mb-2">
        <% let state = "pending" %> <% if (state === "pending") { %>
        <div class="state" style="color: #3c77ff; border-color: #3c77ff">Chờ xử lý</div>
        <% } else if (state === "approved") { %>
        <div class="state" style="color: #009973; border-color: #009973">Đã xử lý</div>
        <% } %>
      </div>
    </div>

    <!-- Content -->
    <div class="container-fluid nd-chi-tiet px-0">
      <!-- Row 1: 3 columns -->
      <div class="row mt-2">
        <div class="col-md-4 custom-col">
          <label for="id-baocao" style="margin-bottom: 6px">ID Báo cáo</label>
          <input type="text" class="form-control" id="id-baocao" value="BC0155001" disabled />
        </div>
        <div class="col-md-4 custom-col">
          <label for="sdt" style="margin-bottom: 6px">Số điện thoại</label>
          <input type="phone" class="form-control" id="sdt" value="08688662010" disabled />
        </div>
        <div class="col-md-4 custom-col">
          <label for="dropdown-state-list" style="margin-bottom: 6px">Trạng thái</label>
          <div class="dropdown d-block p-0" style="flex: 0">
            <a
              class="btn btn-secondary dropdown-toggle"
              href="#"
              role="button"
              id="dropdown-state-list"
              data-bs-toggle="dropdown"
              aria-expanded="false">
              Chưa xử lý
            </a>
            <ul class="dropdown-menu" aria-labelledby="dropdown-state-list">
              <li><a class="dropdown-item" href="#">Chờ xử lý</a></li>
              <li><a class="dropdown-item" href="#">Đã xử lý</a></li>
            </ul>
          </div>
        </div>
      </div>

      <!-- Row 2: 2 columns -->
      <div class="row mt-2">
        <div class="col-md-6 custom-col">
          <label for="id-diemdat" style="margin-bottom: 6px">ID Điểm đặt/ Bảng quảng cáo</label>
          <input type="text" class="form-control" id="id-diemdat" value="QC0614001" disabled />
        </div>
        <div class="col-md-6 custom-col">
          <label for="lhqc" style="margin-bottom: 6px">Loại hình quảng cáo</label>
          <input type="text" class="form-control" id="lhqc" value="Tố giác sai phạm" disabled />
        </div>
      </div>

      <!-- Row 3: 3 columns -->
      <div class="row mt-2">
        <form class="col-md-4 custom-col">
          <label for="date" style="margin-bottom: 6px">Thời điểm gửi</label>
          <div class="input-group date" id="datepicker">
            <input type="text" class="form-control" id="date" />
            <span class="input-group-append">
              <span class="input-group-text h-100">
                <i class="fa fa-calendar" style="background-color: transparent;"></i>
              </span>
            </span>
          </div>
        </form>
        <div class="col-md-4 custom-col">
          <label for="sender-name" style="margin-bottom: 6px">Họ và tên người gửi</label>
          <input type="text" class="form-control" id="sender-name" value="John Doe" disabled />
        </div>
        <div class="col-md-4 custom-col">
          <label for="email" style="margin-bottom: 6px">Email</label>
          <input type="email" class="form-control" id="email" value="johndoe@example.com" disabled />
        </div>
      </div>

      <!-- Rows 4, 5, 6: 1 column each -->
      <div class="row mt-2">
        <div class="col-md-12 custom-col">
            <label for="nd-baocao" style="margin-bottom: 6px">Nội dung báo cáo</label>
            <textarea class="form-control" id="nd-baocao" disabled style="min-height: 100px">Lorem ipsum dolor sit amet consectetur, adipisicing elit. Culpa quod perspiciatis numquam soluta adipisci aperiam magni? Iure laborum esse aperiam totam, laboriosam voluptatibus neque perferendis quas fugit voluptatem laudantium expedita. Natus veritatis illo harum voluptas deleniti, voluptate possimus hic eveniet itaque sunt dolor adipisci corporis? Quisquam perferendis exercitationem quas. Ab.</textarea>
        </div>
      </div>
      <div class="row mt-2">
        <div class="col-md-12 custom-col">
            <div class="col-md-12 custom-col">
                <label for="nd-baocao1" style="margin-bottom: 6px">Nội dung báo cáo</label>
                <textarea class="form-control" id="nd-baocao1" disabled>Lorem ipsum dolor sit amet consectetur, adipisicing elit. Voluptate eum, id veniam odio eveniet tempore provident tempora ex beatae laborum quisquam quae culpa minima eligendi, qui quas tenetur repudiandae blanditiis.</textarea>
            </div>
        </div>
      </div>
      <div class="row mt-2">
        <div class="col-md-12 custom-col hinhanh-mhoa">
            <label for="nd-baocao1" style="margin-bottom: 6px">Hình ảnh minh họa</label>
            <div class="d-flex flex-row" style="gap: 20px">
                <img src="https://placehold.co/371x278?text=Hinh+1" alt="">
                <img src="https://placehold.co/371x278?text=Hinh+2" alt="">
            </div>
        </div>
      </div>
    </div>
  </div>
</div>
