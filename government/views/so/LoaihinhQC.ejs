<%- include("../partials/sidebar.ejs"); %>
<div class="container-fluid vw-100 ps-5 pt-1">
  <div class="top-bar position-relative">
    <!-- profile -->
    <div class="position-absolute top-0 end-0 p-3 pe-1">
      <div class="card d-flex flex-sm-row align-items-center p-2 shadow" style="border-radius: 8px">
        <i class="fa fa-user-circle fa-2x" aria-hidden="true"></i>
        <div class="ps-2 d-flex flex-sm-column">
          <p class="h6 mb-0">John Doe</p>
          <p class="h6 mb-0" style="font-weight: 75">Phường 10, Quận 6</p>
        </div>
      </div>
    </div>
  </div>
  <div class="main-container">
    <!-- Title -->
    <div class="d-block">
      <h1 class="header-1">LOẠI HÌNH QUẢNG CÁO</h1>
    </div>
    <!-- Filter -->
    <div class="d-block mt-3">
      <div class="filter d-flex flex-row align-items-center">
        <div class="dropdown d-inline-block">
          <a
            class="btn btn-secondary dropdown-toggle"
            href="#"
            role="button"
            id="dropdownMenuLink"
            data-bs-toggle="dropdown"
            aria-expanded="false">
            Loại hình quảng cáo
          </a>
          <ul class="dropdown-menu" aria-labelledby="dropdownMenuLink">
            <li><a class="dropdown-item" href="#">Action</a></li>
            <li><a class="dropdown-item" href="#">Another action</a></li>
            <li><a class="dropdown-item" href="#">Something else here</a></li>
          </ul>
        </div>

        <div
          class="card d-inline-block align-top"
          style="
            height: fit-content;
            border-radius: 8px;
            border: 1px solid #677383;
            background-color: #f7fafc;
            width: 8rem;
            padding: 7px;
            margin-left: 10px;
          ">
          <div style="font-size: 16px; line-height: 1">Mới nhất</div>
          <div style="font-size: 20px; text-align: right; line-height: 1; color: #00b285; font-weight: 700">
            Loại hình A
          </div>
        </div>

        <div
          class="card d-inline-block align-top"
          style="
            height: fit-content;
            border-radius: 8px;
            border: 1px solid #677383;
            background-color: #f7fafc;
            width: fit-content;
            padding: 7px;
            margin-left: 10px;
          ">
          <div style="font-size: 16px; line-height: 1">Yêu cầu nhiều nhất</div>
          <div style="font-size: 20px; text-align: right; line-height: 1; color: #d59633; font-weight: 700">
            Loại hình B
          </div>
        </div>
      </div>
    </div>
    <!-- Table -->
    <div class="container-fluid mt-4 ps-0">
      <table id="data-table" class="table table-hover table-responsive" style="width: 100%">
        <thead id="table-header">
          <tr>
            <th>No</th>
            <th>Mã loại</th>
            <th>Loại</th>
            <th>Mô tả</th>
            <th>Thao tác</th>
          </tr>
        </thead>
        <tbody>
          <% for (let i = 1; i <= 55; i++) { %>
          <tr>
            <td><%= i %></td>
            <td>L001</td>
            <td>Lorem ipsum dolor sit amet.</td>
            <td>Lorem ipsum dolor sit amet consectetur adipisicing elit. Temporibus, earum!</td>
            <td>
              <div class="d-flex flex-row align-items-center justify-content-center">
                <a href="#">
                  <i class="fa fa-pencil fa-1x ms-2" aria-hidden="true"></i>
                </a>
                <a href="#">
                  <i class="fa fa-trash fa-1x ms-2" aria-hidden="true"></i>
                </a>
                <a href="#">
                  <i class="fa fa-info fa-1x ms-2" aria-hidden="true"></i>
                </a>
              </div>
            </td>
          </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>
</div>
